<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace = "com.withtrip.mapper.TripPlanMapper">

	<!-- 여행 계획 컬럼 목록 정의 -->
	<sql id = "TripPlanColumns">
		plan_title
		,destination
		,start_date
		,end_date
		,plan_created
		,plan_update
	</sql>

	<!--여행계획 삽입-->
	<insert id="saveTripPlan" parameterType="com.withtrip.domain.TripPlanDTO">
		INSERT INTO trip_plan (
		user_id,
		<include refid="TripPlanColumns" />
		) VALUES (
		#{user_id},
		#{plan_title},
		#{destination},
		#{start_date},
		#{end_date},
		NOW(),
		NOW()
		)
	</insert>

	<!--특정 여행계획 조회-->
	<select id="getTripPlan" parameterType="long" resultType="com.withtrip.domain.TripPlanDTO">
		SELECT
			<include refid = "TripPlanColumns" />
		FROM
			trip_plan
		WHERE
			plan_id = #{plan_id}
	</select>
	
	<!--전체 여행계획목록 조회-->
	<select id ="getAllTripPlans" parameterType="com.withtrip.domain.TripPlanDTO">
		SELECT
			<include refid="TripPlanColumns"/>
		FROM
			trip_plan
		ORDER BY
			plan_id ASC,
			plan_created ASC
	</select>
	</mapper>